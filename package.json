{
    "name": "ini-able",
    "version": "0.1.3",
    "description": "Small *.ini command line tool, as I could not find one that did what I wanted.",
    "main": "lib/cli.js",
    "repository": "git@github.com:mrbandler/ini-able.git",
    "author": "mrbandler <mrbandler@fivefingergames.com>",
    "license": "MIT",
    "scripts": {
        "build": "copyfiles ./package.json ./src && tsc && rimraf ./src/package.json",
        "start": "ts-node ./src/cli.ts"
    },
    "bin": {
        "ini-able": "./bin/cli.js",
        "ini": "./bin/cli.js"
    },
    "files": [
        "bin"
    ],
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@commitlint/format": "^8.2.0",
        "@commitlint/is-ignored": "^8.2.0",
        "@types/fs-extra": "^8.0.1",
        "@types/ini": "^1.3.30",
        "@types/lodash": "^4.14.148",
        "@types/node": "^12.12.5",
        "@typescript-eslint/eslint-plugin": "^2.6.0",
        "@typescript-eslint/parser": "^2.6.0",
        "conventional-changelog-atom": "^2.0.3",
        "copyfiles": "^2.1.1",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.4"
    },
    "dependencies": {
        "commander": "^4.0.0",
        "fs-extra": "^8.1.0",
        "ini": "^1.3.5",
        "lodash": "^4.17.15"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,json,md,yml}": [
            "prettier --write"
        ],
        "*.{ts}": [
            "eslint --fix"
        ]
    }
}
